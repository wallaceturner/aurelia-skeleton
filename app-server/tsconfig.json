{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",        
    "noImplicitAny": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es2017",
    "lib": ["es2017", "dom"]
  },
  "exclude": [
    "node_modules",
    "obj",
    "bin"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./typings/index.d.ts",
    "./custom_typings/**/*.d.ts"
  ]
}